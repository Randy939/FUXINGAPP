<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Imagen del plato -->
        <ImageView
            android:id="@+id/imageViewCartItem"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_background"
            android:contentDescription="Imagen del plato" />

        <!-- Detalles -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/textViewCartItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Plato"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textViewCartItemTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/. 12.00"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Controles de cantidad -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <ImageButton
                    android:id="@+id/buttonDecrease"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:background="@drawable/circle_button_background"
                    android:src="@android:drawable/ic_media_previous"
                    android:contentDescription="Disminuir cantidad"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/textViewCartItemQuantity"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <ImageButton
                    android:id="@+id/buttonIncrease"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:background="@drawable/circle_button_background"
                    android:src="@android:drawable/ic_input_add"
                    android:contentDescription="Aumentar cantidad"
                    app:tint="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- BotÃ³n eliminar -->
        <ImageButton
            android:id="@+id/buttonRemoveItem"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Eliminar del carrito"
            app:tint="@android:color/holo_red_dark" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
